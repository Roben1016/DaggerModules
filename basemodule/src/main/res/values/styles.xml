<resources>

    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionModeOverlay">true</item>
        <item name="colorPrimaryDark">@color/c_000000</item>
        <item name="colorPrimary">@color/c_ffffff</item>
        <item name="colorAccent">@color/c_c15d3e</item>
        <item name="colorControlActivated">?attr/colorAccent</item>
        <item name="homeAsUpIndicator">@mipmap/ic_back</item>
        <item name="actionOverflowButtonStyle">@style/ActionButton.Overflow</item>
        <item name="android:listDivider">@drawable/divider</item>
        <item name="android:textColorPrimary">@color/c_333333</item>
        <item name="android:textColorSecondary">@color/c_666666</item>
        <item name="android:textColorHint">@color/c_999999</item>
        <item name="android:windowBackground">@color/c_faf8f7</item>
    </style>

    <style name="AppTheme" parent="AppTheme.Base" />

    <style name="AppTheme.Home" parent="AppTheme">
        <item name="homeAsUpIndicator">@null</item>
    </style>

    <style name="ActionButton.Overflow" parent="@style/Widget.AppCompat.Light.ActionButton.Overflow">
        <item name="android:src">@mipmap/ic_menu_overflow_more</item>
    </style>

    <style name="AppTheme.Popup" parent="AppTheme">
        <item name="homeAsUpIndicator">@mipmap/ic_close</item>
    </style>

    <style name="AppBar"/>
    <style name="AppBar.Overlay" parent="ThemeOverlay.AppCompat.ActionBar" />
    <style name="AppBar.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>
    <style name="AppBar.Shadow">
        <item name="android:layout_height">1px</item>
    </style>


    <declare-styleable name="ProgressLayout">
        <attr name="progressLoadingStateBackgroundColor" format="color" />
        <attr name="progressEmptyStateBackgroundColor" format="color" />
        <attr name="progressErrorStateBackgroundColor" format="color" />
    </declare-styleable>

</resources>